{
    "manifest_version": 3,
    "name": "__MSG_extension_name__",
    "version": "1.4.1",
    "description": "__MSG_extension_description__",
    "default_locale": "en",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "optional_permissions": [],
    "options_page": "options/options.html",
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        },
        "default_title": "BGU Scout",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://bgu4u22.bgu.ac.il/*"
            ],
            "js": [
                "scripts/bgu4u22-content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": [
                "https://moodle.bgu.ac.il/moodle/my/*"
            ],
            "js": [
                "scripts/moodle-content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": [
                "https://bgu4u.bgu.ac.il/pls/scwp/!app.ann?*"
            ],
            "js": [
                "scripts/bgu4u-content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": [
                "https://reports4u22.bgu.ac.il/*"
            ],
            "js": [
                "scripts/reports4u22-content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ]
}
