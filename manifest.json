{
    "manifest_version": 3,
    "name": "BGU Scout",
    "version": "1.2.0",
    "description": "Show BGU grade distributions in a more convenient way",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "optional_permissions": [],
    "options_page": "options/options.html",
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        },
        "default_title": "BGU Scout",
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://bgu4u22.bgu.ac.il/*"
            ],
            "js": [
                "scripts/bgu4u22-content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": [
                "https://moodle.bgu.ac.il/moodle/my/*"
            ],
            "js": [
                "scripts/moodle-content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": [
                "https://bgu4u.bgu.ac.il/pls/scwp/!app.ann?lang=he&step=999&ex_department=*"
            ],
            "js": [
                "scripts/bgu4u-content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        },
        {
            "matches": [
                "https://reports4u22.bgu.ac.il/*"
            ],
            "js": [
                "scripts/reports4u22-content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "pdfjs-5.2.133-legacy-dist/*",
                "pdfjs-5.2.133-legacy-dist/build/pdf.js",
                "pdfjs-5.2.133-legacy-dist/build/pdf.worker.js",
                "pdfjs-5.2.133-legacy-dist/cmaps/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}
